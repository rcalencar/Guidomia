<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/CarAdListFragment">

    <fragment
        android:id="@+id/CarAdListFragment"
        android:name="com.rcalencar.guidomia.view.CarAdListFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_car_ad_list">

        <action
            android:id="@+id/action_List_to_Detail"
            app:destination="@id/CarAdDetailFragment" />
    </fragment>
    <fragment
        android:id="@+id/CarAdDetailFragment"
        android:name="com.rcalencar.guidomia.view.CarAdDetailsFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_car_ad_details">

        <action
            android:id="@+id/action_Detail_to_List"
            app:destination="@id/CarAdListFragment" />
    </fragment>
</navigation>